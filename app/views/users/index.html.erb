<div class="container">
    <h1 class="text-center"> Users </h1>
    <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td class="text-center">
                <%= link_to 'Show', user_path(user), class: 'btn btn-secondary btn-sm' %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>