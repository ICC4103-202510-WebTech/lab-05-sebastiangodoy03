<div class="container">
    <h1 class="text-center"> Users </h1>
    <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Messages Sent</th>
            <th>Details</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td class="text-center"><%= user.messages.count %></td>
            <td class="text-center">
                <%= link_to 'Show', user_path(user), class: 'btn btn-secondary btn-sm' %>
            </td>
            <td class="text-center">
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <%= link_to 'Add New User', new_user_path, class: 'btn btn-primary' %>
    </div>
</div>