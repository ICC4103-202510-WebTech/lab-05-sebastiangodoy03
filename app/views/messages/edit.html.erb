
<h1 class="text-center">Edit Message</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if @message.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @message.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @message, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :body, "Message Content", class: "form-label" %>
          <%= form.text_area :body, class: "form-control", placeholder: "Escribe tu mensaje aquÃ­" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit "Update Message", class: "btn btn-primary" %>
          <%= link_to 'Back', messages_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

     