<div class="container">
    <h1 class="text-center"> Chat </h1>
    <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Sender ID</th>
            <th>Receiver ID</th>
            <th>Details</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        <% @chats.each do |chat| %>
            <tr>
            <td><%= chat.sender_id %></td>
            <td><%= chat.receiver_id %></td>
            <td class="text-center">
                <%= link_to 'Show', chat_path(chat), class: 'btn btn-secondary btn-sm' %>
            </td>
            <td class="text-center">
                <%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-warning btn-sm' %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <%= link_to 'Add New Chat', new_chat_path, class: 'btn btn-primary' %>
    </div>
</div>