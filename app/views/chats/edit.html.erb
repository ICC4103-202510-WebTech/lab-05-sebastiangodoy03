<h1 class="text-center mb-4">Editar Chat</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @chat, local: true, class: "needs-validation") do |form| %>
        <div class="mb-3">
          <%= form.label :sender_id, "Sender ID", class: "form-label" %>
          <%= form.number_field :sender_id, class: "form-control", placeholder: "Ingrese el ID del remitente" %>
        </div>

        <div class="mb-3">
          <%= form.label :receiver_id, "Receiver ID", class: "form-label" %>
          <%= form.number_field :receiver_id, class: "form-control", placeholder: "Ingrese el ID del receptor" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit "Update Chat", class: "btn btn-primary" %>
          <%= link_to 'Back', chats_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>